<Window x:Class="ScheduleNotification.Views.AddReminderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Reminder" Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Title -->
            <RowDefinition Height="Auto"/>  <!-- Description -->
            <RowDefinition Height="Auto"/>  <!-- Due Time -->
            <RowDefinition Height="Auto"/>  <!-- Repeat Options -->
            <RowDefinition Height="*"/>     <!-- Spacer -->
            <RowDefinition Height="Auto"/>  <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- ===== Title ===== -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Title:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTitle" Height="25"/>
        </StackPanel>

        <!-- ===== Description ===== -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Description (optional):" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" Height="50" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <!-- ===== Due Time (when to remind) ===== -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="When to remind:" FontWeight="Bold" Margin="0,0,0,5"/>

            <!-- Date Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Date:" Width="50" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDate" Width="150"/>
            </StackPanel>

            <!-- Time Selection -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Time:" Width="50" VerticalAlignment="Center"/>
                <ComboBox x:Name="cboHour" Width="60"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox x:Name="cboMinute" Width="60"/>
            </StackPanel>
        </StackPanel>

        <!-- ===== Repeat Options ===== -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <CheckBox x:Name="chkRepeat" Content="Repeat this reminder" FontWeight="Bold"
                      Checked="ChkRepeat_Changed" Unchecked="ChkRepeat_Changed"/>

            <!-- Repeat Settings (hidden by default) -->
            <StackPanel x:Name="pnlRepeatOptions" Visibility="Collapsed" Margin="20,10,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Repeat:" Width="80" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cboRepeatType" Width="120">
                        <ComboBoxItem Content="Daily" IsSelected="True"/>
                        <ComboBoxItem Content="Weekly"/>
                        <ComboBoxItem Content="Monthly"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- ===== Buttons ===== -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="30" Margin="0,0,10,0"
                    Click="Cancel_Click"/>
            <Button x:Name="btnSave" Content="Save" Width="80" Height="30"
                    FontWeight="Bold" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
