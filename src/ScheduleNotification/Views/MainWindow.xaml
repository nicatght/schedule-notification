<Window x:Class="ScheduleNotification.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleNotification.Views"
        mc:Ignorable="d"
        Title="Schedule Notification" Height="500" Width="650">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 現在時間 -->
            <RowDefinition Height="*"/>     <!-- 提醒清單 -->
            <RowDefinition Height="Auto"/>  <!-- 新增按鈕 -->
        </Grid.RowDefinitions>

        <!-- ===== 上方：現在時間 ===== -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Current Time: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtCurrentTime" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ===== 中間：提醒清單 ===== -->
        <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="10">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Reminders" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <!-- 當沒有提醒時顯示的提示文字 -->
                <TextBlock x:Name="txtNoReminders"
                           Text="No reminders yet. Click 'Add Reminder' to create one."
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- ListBox: 顯示所有提醒 -->
                <ListBox x:Name="lstReminders" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="5,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>      <!-- 提醒資訊 -->
                                        <ColumnDefinition Width="Auto"/>   <!-- 倒數時間 -->
                                        <ColumnDefinition Width="Auto"/>   <!-- 編輯按鈕 -->
                                    </Grid.ColumnDefinitions>

                                    <!-- 左側：標題和描述 -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding Description}" Foreground="Gray" FontSize="12"
                                                   TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>

                                    <!-- 中間：倒數時間（會在 code-behind 更新） -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                                        <TextBlock Text="{Binding DueTime, StringFormat='{}{0:MM/dd HH:mm}'}"
                                                   FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                                        <TextBlock x:Name="txtCountdown"
                                                   Tag="{Binding Id}"
                                                   FontSize="14" FontWeight="Bold" Foreground="#007ACC"
                                                   HorizontalAlignment="Right"/>
                                    </StackPanel>

                                    <!-- 右側：編輯和刪除按鈕 -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="Edit" Width="50" Margin="5,0"
                                                Tag="{Binding Id}" Click="EditReminder_Click"/>
                                        <Button Content="Delete" Width="55"
                                                Tag="{Binding Id}" Click="DeleteReminder_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- ===== 下方：新增提醒按鈕 ===== -->
        <Button Grid.Row="2" Content="+ Add Reminder"
                Width="150" Height="40"
                FontSize="14" FontWeight="Bold"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Click="AddReminder_Click"/>
    </Grid>
</Window>
